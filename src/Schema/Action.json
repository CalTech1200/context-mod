{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "kind": {
            "description": "The type of action that will be performed",
            "enum": [
                "comment",
                "flair",
                "lock",
                "remove",
                "report"
            ],
            "type": "string"
        },
        "name": {
            "description": "A friendly name for this Action",
            "type": "string"
        }
    },
    "propertyOrder": [
        "kind",
        "name"
    ],
    "required": [
        "kind"
    ],
    "type": "object"
}

